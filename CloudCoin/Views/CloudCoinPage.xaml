<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudCoin.CloudCoinPage">
     <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
     </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Label Text="You can get cloudcoins from email or Airdrop. .jpg, .jpeg, .cc and .ccstack file types could be imported by this app." />
			<Button x:Name="ImportButton" BackgroundColor="Gray" Text="Import coins" TextColor="Aqua" />
			<Button x:Name="SafeButton" BackgroundColor="Gray" Text="My Safe" TextColor="Aqua" />
			<Button x:Name="ExportButton" BackgroundColor="Gray" Text="Export coins" TextColor="Aqua" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>